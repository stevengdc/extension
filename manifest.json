{
    "manifest_version": 2,
    "name": "SECSU Call Escalation by StevenGDC",
    "description": "Chrome/Opera call escalation extension.",
    "version": "0.3",
    "background": {
        "scripts": ["event.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs", 
        "http://*/*", 
        "https://*/*"
    ]
}